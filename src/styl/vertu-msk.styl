  label
    color c_black
    margin 0 5px
    font-size 16px
  &__inp-subm
    display block
    border 1px solid c_white
    text-transform uppercase
    margin 0 auto
    font 14px robotoCd
    background-color transparent
    padding 12px 20px 9px
