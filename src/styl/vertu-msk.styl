/* ==========================================================================
   2.3. NEW IN CATALOG
   ========================================================================== */
.new-catalog
  min-height 650px
  padding-bottom 100px
  color c_black
  background-color c_white
  &--index
    background #fff url('../img/bg/special-offers-t.png') 50% 100% no-repeat
    @media $xxs 
      display none
  h2
    font 24px robotoSl
    font-weight 100
    color #010101
    padding-top 40px
  &__menu
    position relative
    text-align center
    min-height 50px
    margin-top 25px
  &__slider
    font-size 0
    &__item
      display inline-block
      min-width 300px
      height 480px
      position relative
      &__content
        background url('../img/bg/slider-bg.png') 0 0 no-repeat
        width 284px
        height 319px
        position absolute
        bottom 0
        left: 50%;
        margin-left: -142px;
        &:hover 
          .price-current
            color c_purple
            transition(color)
          .new-catalog__slider__item__content--price--bd
            &:after
              background-color c_purple
              transition(background-color)
          .new-catalog__slider__item__content--cart
            background url('../img/svg/cart-pink.svg') 0 0 no-repeat
          .new-catalog__slider__item__content--txt a 
            color c_purple
            text-decoration none
          .icons__item
            opacity .8
            transition(opacity)
        img 
          margin -100px 0 0 -100px
          position absolute
        &--txt
          width 160px
          float right
          margin-top 50px
          a 
            font-size 14px
            font-weight 700
            color c_black
            clear both
            display block
            text-transform uppercase
        &--price
          position: absolute;
          bottom: 10px;
          width: 200px;
          height: 100px;
          left: 50%;
          margin-left: -100px;
          text-align center
          line-height 1.1
          &--bd
            &:after
              content ''
              position absolute
              left 50%
              margin-left -50px
              height 1px
              background-color c_gray
              width 100px
              margin-top 5px
              transition(background-color)
            span
              display block
            .price-old
              font-size 13px
              color c_gray
              text-decoration line-through
            .price-current
              font-size 16px
              font-weight 700
              transition(color)
        &--cart
          size 20px
          display block
          margin 10px auto 0
          background url('../img/svg/cart-black.svg') 0 0 no-repeat
          transition none
  .slick-arrow
    size 22px
    position absolute
    border 0
    background none
    left 50%
    bottom -35px
    &.slick-next
      margin-left 20%
      background url('../img/svg/arrow-right.svg') 0 0 no-repeat
      background-size 20px 20px
    &.slick-prev
      margin-left -25%
      background url('../img/svg/arrow-left.svg') 0 0 no-repeat
      background-size 20px 20px
  .slick-dots
    font-size 0
    text-align center
    margin-top 50px
    li
      display inline-block
      padding 0 30px
      position relative
      &:after
        content ''
        height 1px
        left 0
        top 5px
        position absolute
        width 100%
        background-color c_gray
      button
        border-radius 50%
        display block
        background-color transparent
        border 0
        width 10px
        height 10px
        position relative
        z-index 1
      &.slick-active
        button
          border 1px solid c_gray
          background-color c_purple

