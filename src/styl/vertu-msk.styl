====================================== */
.model-wrp
  background-image url(../img/model-bg.png)
  background-size cover
  background-position: center center
  background-repeat: no-repeat
  background-color: #f2f2f2
  & + .model-catalog
    background-color: #f2f2f2

.model
  margin: 0 auto
  width 100%
  min-width: 320px
  height auto
  font-size: 0
  position: relative
  padding-top: 40px
  padding-bottom: 65px
  @media $xs
    width: 480px
  @media $sm
    width: 768px
  @media $md
    width 960px
  @media $lg
    width 1110px

  &__inner-wrapper
    margin: 0 auto
    width: 100%
    position: relative
    overflow: hidden
    @media $xxs
      padding: 0 40px
      width: 400px
    @media $xs
      width: 380px
    @media $sm
      width 585px
    @media $md
      width 740px
    @media $lg
      width: 960px

  &__arrow
    display inline-block
    width: 62px
    height: 303px
    background-image: url(../img/model__arrow.png)
    background-size: contain
    position: absolute
    top: calc(50% - 151px)
    opacity: .8
    &:hover
      opacity: 1
    @media $xsm
      width: 30px
      height: 142px

    &--prev
      left -(63px + 3%)
      @media $xs
        left: 0
      @media $xxs
        left: 0
      @media $sm
        left: 0
      @media $xlg
         left: 0

    &--next
      transform rotate(180deg)
      right -(63px + 3%)
      @media $xlg
        right: 0
      @media $xs
        right: 0
      @media $xxs
        right: 0
      @media $sm
        right: 0
      @media $xlg
        right: 0


  &__more-btn
    display: inline-block
    font-family: robotoCd
    font-size: 14px
    width: 140px
    text-transform: uppercase
    color: #ffffff
    height: 55px
    line-height: 55px
    padding: 0 15px
    padding-left: 20px
    border 1px solid #ffffff
    margin-left: 5px
    background-color: transparent
    margin-top: 5px
    position: absolute
    left: 0
    bottom: 0
    background-image: url(../img/bg/plus.png)
    background-position: 100px center
    background-repeat: no-repeat
    &:hover
      text-decoration: none
    @media $sm
      display: none

  &__description-by-more
    display: inline-block
    font-family:roboto
    font-size: 12px
    color: #ffffff

  &__img
    width 280px
    height 475px
    object-fit contain
    display: inline-block
    vertical-align: top
    margin-top: 45px
    @media $xxs
      width: 135px
      height: 235px
    @media $xsm
      width: 135px
      height: 235px
      margin-top: 0
    @media $sm
      width: 205px
      height: 345px
      margin-top: 160px
    @media $md
      width: 210px
      height: 355px
      margin-top: 160px
    @media $lg
      width: 275px
      height: 475px
      margin-top: 40px

  &__tradein
    display: none
    width: 78px
    height: 108px
    object-fit contain
    vertical-align: top
    margin-top: 15px
    @media $xmd
      position: absolute
      left: 125px
    @media $md
      position: absolute
      left: 125px
    @media $lg
      position: static

    &--isvisible
      display: inline-block
      @media $xsm
        display: none

  &__info
    display: block
    float: right
    position: relative
    width: 55%
    @media $xsm
      margin-bottom: 50px
      //padding-bottom: 50px
    //@media $xsm
    //  width: 180px
    //@media $sm
    //  width: 350px
    //@media $md
    //  width: 490px
    //@media $lg
    //  width: 545px

  &__name
    display: inline-block
    color: #ffffff
    text-transform: uppercase
    font-weight: bold
    font-family robotoSl
    font-size: 48px
    text-align: left
    @media $md
      font-family:robotoTh
      font-weight: lighter
    @media $sm
      font-family:robotoTh
      font-weight: lighter
      font-size: 34px
    @media $xsm
      display: none

  &__name-xs
    display: none
    color: #ffffff
    text-transform: uppercase
    font-family:robotoTh
    font-weight: lighter
    font-size: 30px
    text-align: left
    @media $xsm
      display: inline-block
    &:after
      content ''
      display: inline-block
      background-image: url(../img/icon-trade-in--mini.png)
      width: 40px
      height: 40px
      background-size contain
      background-repeat: no-repeat
      margin-left: 10px
      vertical-align: middle

  &__icons
    display: inline-block
    width: 100%
    font-size: 0
    margin-top: 35px
    @media $xsm
      margin-top: 5px

  &__icon
    display: inline-block
    font-family roboto
    font-size: 12px
    color: #ffffff
    width: 140px
    vertical-align: top
    margin-bottom: 17px
    @media $xsm
      width: 40px
      height: 40px
      margin-left: 10px
      margin-bottom: 5px

    span
      display: inline-block
      vertical-align: middle
      width: 90px
      margin-left: 10px
      @media $xsm
        display: none

    i
      display: inline-block
      min-height: 37px
      width: 37px
      height: 37px
      vertical-align: middle
      background-size: 37px 37px
      background-position left center
      background-repeat: no-repeat
    .stock
      background-image: url(../img/svg/Actions-01.svg)
    .new
      background-image: url(../img/svg/New-01.svg)
    .hit
      background-image: url(../img/svg/Hit-01.svg)
    .minprice
      background-image: url(../img/svg/MinPrice-01.svg)
    .sale
      background-image: url(../img/svg/Sale-01.svg)
    .exsclusive
      background-image: url(../img/svg/Exclusieve-01.svg)

  &__description-title
    display: inline-block
    font-size: 16px
    color: #ffffff
    font-family:roboto
    width: 510px
    text-align: left
    margin-bottom: 10px
    @media $sm
      font-size: 14px
    @media $md
      font-size: 16px
    @media $xsm
      display: none


  &__description
    display: inline-block
    font-family:roboto
    font-size: 14px
    color: #ffffff
    @media $sm
      font-size: 12px
    @media $md
      font-size: 14px
    @media $xsm
      display: none

  &__oldprice
    display: block
    font-family:robotoSl
    font-weight: lighter
    color: #848687
    font-size: 24px
    margin-top: 25px
    @media $xsm
      font-size: 20px

  &__newprice
    display: block
    font-family:robotoSl
    font-weight: bold
    font-size: 30px
    color: #ffffff
    margin-top: 10px
    margin-bottom: 20px
    @media $xsm
      font-size: 20px

  &__btn
    display: inline-block
    font-family: robotoSl
    font-weight: lighter
    font-size: 20px
    text-transform: uppercase
    color: #ffffff
    text-align: center
    height: 55px
    line-height: 55px
    padding: 0 15px
    border 1px solid #ffffff
    margin-left: 5px
    background-color: #373533
    margin-top: 5px
    &:first-child
      margin-left: 0
    &:hover
      text-decoration: none
    @media $xsm
      display: none

    &--buy
      background-color: #b33684
      background-image: url(../img/svg/icon-buy-01.svg)
      background-repeat: no-repeat
      background-size: 28px 30px
      background-position: 95% center
      padding-right: 50px

  &__btn-list
    @media $sm
      display: none
    padding: 0
    position: relative
    bottom: -50px
  &__btn-list-item
    display: inline-block
  &__btn-list-link
    display: inline-block
    text-decoration: none
    font-family: robotoSl
    font-weight: lighter
    font-size: 20px
    text-transform: uppercase
    color: #ffffff
    text-align: center
    height: 55px
    line-height: 55px
    border 1px solid #ffffff
    margin-left: 5px
    background-color: #373533
    margin-top: 5px
    width: 130px
    &:hover
     text-decoration: none
    &--buy
      background-color: #b33684
      background-image: url(../img/svg/arrow-dropdown.svg)
      background-repeat: no-repeat
      background-size: 34px 36px
      background-position: 95% center
      padding-right: 50px
      width: 175px

  &__subbtn-list
    display: none
    &.isvisible
      display: block

.model-catalog
  background-color: #ffffff
  overflow: hidden



/* ====================
  Phones
======================= */

.phones-wrp
  background-color: #f2f2f2
  padding-top: 55px

  & .phones-inner-wrp
    text-align: center
    margin-left: -100px
    padding-bottom: 50px
    @media $xlg
      padding-left: 20px

  & .wrapper
    @media $extlg
      width: 1515px

  & h2
    color: #000000
    font-size: 36px
    position: relative
  & p
    color: #999999
    text-align: center
    line-height: 24px
    text-transform: uppercase
    font-size: 18px
  & .new-catalog__slider__item.model-line-items
    position: relative
    margin-left: 100px

    & .new-catalog__slider__item__content--txt
      width: 100px
    & .new-catalog__slider__item__content img
        margin: 0 0 0 -115px
        max-height 200px
        max-width 185px
    & .new-catalog__slider__item__content
      left: 0
      margin-left: 0
    & .new-catalog__slider__item__content--txt a
      text-align: left
    & .new-catalog__slider__item__content--txt .icons__item
      margin-bottom: 5px
    & .price-current
      color: #000000
      transition color 0.5s linear
    & .new-catalog__slider__item__content:hover
      .price-current
        color: #ec008c
  & .phones-btn
    display: block
    text-transform: uppercase
    color: #000000
    line-height: 40px
    width: 195px
    text-align: center
    height: 40px
    border 1px solid #cccccc
    font-size: 14px
    margin: 0 auto
    text-decoration: none


/*===========================
accessories
=============================*/

.accessories
  height: 710px
  background-color: #333333
  position: relative
  &:before
    content ''
    display: block
    width: 100%
    height: 68px
    background-repeat: no-repeat
    background-image: url(../img/bg/bg-triangle.png)
    background-size: contain
    position: absolute
    top: 0
    left: 0
  &:after
    content ''
    display: block
    width: 100%
    height: 68px
    background-repeat: no-repeat
    background-image: url(../img/bg/bg-triangle-black.png)
    background-size: contain
    position: absolute
    bottom: -68px
    left: 0

/* ==========================
Product info
=============================*/

.product-info
  background-color: #ffffff
  padding-top: 50px
  padding-bottom: 20px
  text-align: center
  border-bottom 25px solid #333333
  &__title
    font-family: robotoSl
    font-weight: lighter
    font-size: 30px
    color: #333333
    text-align: center
    margin-bottom: 40px
    margin-top: 50px
  &__img
    width: 60%
    height: auto
    display: block
    margin: auto
    object-fit contain
  &__text
    font-size: 16px
    color: #000000
    line-height: 26px
    text-align: left
    columns 2
    -moz-columns 2
    -webkit-columns 2
    @media $xxs
      columns 1
      -moz-columns 1
      -webkit-columns 1
    &.first
      margin-top: 50px
    &.second
      margin-top: 35px
  &__plus
    display: inline-block
    width: 45px
    height: 45px
    background-color: #ababab
    position: relative
    margin-top: 35px
    margin-bottom: 35px
    &.open:before
      transform rotate(45deg)
    &:hover
      background-color: rgba(115,40,98,0.7);
    &:before
      content ''
      display: inline-block
      position: absolute
      top: 0
      right: 0
      left: 0
      bottom: 0
      margin: 0 auto
      background-image: url(../img/bg/plus.png)
      background-repeat: no-repeat
      background-position: center
