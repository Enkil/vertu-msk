body
  background-color #000
  color #fff
  font 14px/1.2 roboto
  font-weight 400
 
a 
  color #fff
  text-decoration none
  transition all 0.5s ease
  &:hover 
    text-decoration underline
    color darken(white, 20%)
    transition all 0.5s ease

menu
p
h1
h2
h3
h4
h5
h6
ul
ol
  margin 0
  padding 0

h1
h2
h3
  text-transform uppercase
  text-align center

div:focus
a:focus
button:focus
  outline none
  
.ta-c
  text-align center

plus(display, position, width, border, img)
  display display
  position position
  width width
  border 1px solid border
  height 41px
  letter-spacing 2px
  z-index 1
  background rgba(17,17,17,.7) 
  &:after
    content ''
    position absolute
    width 25px
    height 25px
    background url(img) no-repeat
    margin-top 7px
    margin-left 9px
  &:hover 
    text-decoration none

btn(color, bgcolor, border, fontsize, padding)
  color color
  background-color bgcolor
  border border
  font-size fontsize
  padding padding
  text-transform uppercase
  font-family robotoSl
  font-weight 300

.square-brackets
  &:before 
    content: '['
    left 0
  &:after
    content ']'
    right 0

.header-thin
