/* ==========================================================================
   2.1. MAIN SLIDER
   ========================================================================== */
.main-slider
  height 610px
  @media $xsm 
    display none
  &__slick
    height 610px
    &__item
      height 610px
      position relative
      &__info
        margin-top 430px
        padding 15px 0
        font-size 16px
        color c_gray
        .plus
          plus(block, static, auto, c_lightgray, '../img/bg/plus.png')
          float right
          line-height 41px
          padding 0 45px 0 15px
          background-position 100% 50%
          letter-spacing 2px
        p 
          height 75px
          overflow hidden
          @media $sm 
            margin 0px 25% 0px 0
          @media $md 
            margin 0 20% 0px 30%
          @media $lg 
            margin 0 25% 0px 30%
  .slick-arrow
    width 62px
    height 303px
    position absolute
    z-index 1
    top 85px
    margin-left -31px
    background url('../img/bg/main-slider-arrows.png')
    background-repeat none
    border 0
    text-indent -1000000px
    &.slick-prev
      left 10%
    &.slick-next
      right 10%
      background-position 100% 0
  .slick-dots
    position relative
    text-align center
    bottom 50px
    font-size 0
    li
      display inline-block
      size 22px
      margin 0 3px
      cursor pointer
      background url('../img/bg/main-slider-bullets.png') 100% 0 no-repeat
      button 
        background transparent
        border 0
    .slick-active
      background-position 0 0


/* ==========================================================================
   2.2. CATALOG FILTER
   ========================================================================== */
